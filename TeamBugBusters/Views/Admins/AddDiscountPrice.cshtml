@model TeamBugBusters.Models.ProductDiscountViewModel

<div class="container">
    <h1>Fill in start and end date for the discount as well the amount to remove from current price</h1>
</div>
<form asp-action="AddDiscountPrice" class="container">
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">
        <label asp-for="ProductName">Product Name:</label>
        <input type="text" class="form-control" asp-for="ProductName" readonly />
    </div>
    <div class="form-group">
        <label asp-for="CurrentPrice">Current Price:</label>
        <input type="text" class="form-control" asp-for="CurrentPrice" readonly />
    </div>
    <div class="form-group">
        <label asp-for="StartDate">Start Date:</label>
        <input type="date" class="form-control" asp-for="StartDate" />
    </div>
    <div class="form-group">
        <label asp-for="EndDate">End Date:</label>
        <input type="date" class="form-control" asp-for="EndDate" />
    </div>
    <div class="form-group">
        <label asp-for="Discount">Discount:</label>
        <input type="number" class="form-control" asp-for="Discount" />
    </div>
    <button type="submit" class="btn btn-primary mt-4">Apply Discount</button>
</form>

